# إعدادات التلغرام - Telegram Configuration
# =====================================

# بيانات التطبيق الأساسية (من BotFather)
# Basic App Credentials (from BotFather)
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here

# مفتاح البوت (اختياري لكن موصى به)
# Bot Token (optional but recommended)
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz123456789
TELEGRAM_BOT_USERNAME=your_bot_username

# بيانات تسجيل الدخول (للتطبيق الكامل)
# Login Credentials (for full application)
TELEGRAM_PHONE_NUMBER=+961xxxxxxxxx
TELEGRAM_SESSION_STRING=1BJW_apz...

# إعدادات الويب هوك (اختيارية)
# Webhook Settings (optional)
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/api/telegram/webhook
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret

# إعدادات إضافية
# Additional Settings
TELEGRAM_MAX_RETRIES=5
TELEGRAM_REQUEST_TIMEOUT=30000
TELEGRAM_CONNECTION_RETRIES=3

# إعدادات القناة والمجموعة (اختيارية)
# Channel and Group Settings (optional)
TELEGRAM_DEFAULT_CHANNEL=@your_channel_username
TELEGRAM_ADMIN_GROUP=-1001234567890

# إعدادات الأمان
# Security Settings
TELEGRAM_ENCRYPTION_KEY=your_encryption_key_32_chars
TELEGRAM_RATE_LIMIT_REQUESTS=30
TELEGRAM_RATE_LIMIT_WINDOW=60000

# إعدادات التخزين المؤقت
# Caching Settings
TELEGRAM_CACHE_TTL=3600000
TELEGRAM_CACHE_MAX_SIZE=1000

# إعدادات السجلات
# Logging Settings
TELEGRAM_LOG_LEVEL=info
TELEGRAM_LOG_FILE=logs/telegram.log

# إعدادات النسخ الاحتياطي
# Backup Settings
TELEGRAM_BACKUP_ENABLED=true
TELEGRAM_BACKUP_INTERVAL=86400000
TELEGRAM_BACKUP_PATH=./backups/telegram

# إعدادات الإشعارات
# Notification Settings
TELEGRAM_NOTIFICATIONS_ENABLED=true
TELEGRAM_ADMIN_CHAT_ID=123456789

# إعدادات الرد التلقائي
# Auto-reply Settings
TELEGRAM_AUTO_REPLY_ENABLED=true
TELEGRAM_AUTO_REPLY_DELAY=5000
TELEGRAM_AUTO_REPLY_MAX_LENGTH=4096

# إعدادات الوسائط
# Media Settings
TELEGRAM_MAX_FILE_SIZE=20971520
TELEGRAM_SUPPORTED_FORMATS=jpg,jpeg,png,gif,mp4,avi,mov,pdf,doc,docx

# إعدادات API
# API Settings
TELEGRAM_API_BASE_URL=https://api.telegram.org
TELEGRAM_API_TIMEOUT=10000
TELEGRAM_API_MAX_CONNECTIONS=10

# إعدادات قاعدة البيانات
# Database Settings
TELEGRAM_DB_COLLECTION_PREFIX=telegram_
TELEGRAM_DB_CONNECTION_POOL_SIZE=10

# إعدادات Redis (اختيارية)
# Redis Settings (optional)
TELEGRAM_REDIS_ENABLED=false
TELEGRAM_REDIS_URL=redis://localhost:6379
TELEGRAM_REDIS_PREFIX=telegram:

# إعدادات Docker (اختيارية)
# Docker Settings (optional)
TELEGRAM_DOCKER_IMAGE=telegram-app:latest
TELEGRAM_DOCKER_CONTAINER_NAME=telegram-service

# إعدادات المراقبة
# Monitoring Settings
TELEGRAM_HEALTH_CHECK_ENABLED=true
TELEGRAM_HEALTH_CHECK_INTERVAL=30000
TELEGRAM_METRICS_ENABLED=true

# إعدادات التطوير
# Development Settings
TELEGRAM_DEBUG_MODE=false
TELEGRAM_SANDBOX_MODE=true
TELEGRAM_TEST_PHONE=+1234567890

# =====================================
# ملاحظات مهمة:
# ===============
# 1. احتفظ بـ API_ID و API_HASH آمنين
# 2. لا تشارك SESSION_STRING مع أحد
# 3. استخدم متغيرات البيئة في الإنتاج
# 4. قم بعمل نسخ احتياطية دورية للبيانات
# 5. راقب حدود الاستخدام لتجنب الحظر
#
# أوامر مفيدة:
# =============
# اختبار الاتصال: npm run telegram:test
# عرض السجلات: tail -f logs/telegram.log
# إعادة تشغيل الخدمة: pm2 restart telegram-service
